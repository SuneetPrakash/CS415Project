<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.suneet86.cs415project.StudentProfile">

    <TextView android:text="Student Profile" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stuf"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name :"
        android:id="@+id/textView14"
        android:layout_below="@+id/stuf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Student ID:      "
        android:id="@+id/textView17"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address :"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Program :"
        android:id="@+id/textView19"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major 1 :"
        android:id="@+id/textView20"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView19"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major 2 :"
        android:id="@+id/textView21"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPName"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPID"
        android:layout_alignTop="@+id/textView17"
        android:layout_toRightOf="@+id/textView17"
        android:layout_alignRight="@+id/txtStudentPName"
        android:layout_alignEnd="@+id/txtStudentPName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPAddress"
        android:layout_alignTop="@+id/textView18"
        android:layout_alignLeft="@+id/txtStudentPID"
        android:layout_alignStart="@+id/txtStudentPID"
        android:layout_alignRight="@+id/txtStudentPID"
        android:layout_alignEnd="@+id/txtStudentPID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPProgram"
        android:layout_alignTop="@+id/textView19"
        android:layout_alignLeft="@+id/txtStudentPAddress"
        android:layout_alignStart="@+id/txtStudentPAddress"
        android:layout_alignRight="@+id/txtStudentPAddress"
        android:layout_alignEnd="@+id/txtStudentPAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPMajor1"
        android:layout_alignTop="@+id/textView20"
        android:layout_alignLeft="@+id/txtStudentPProgram"
        android:layout_alignStart="@+id/txtStudentPProgram"
        android:layout_alignRight="@+id/txtStudentPProgram"
        android:layout_alignEnd="@+id/txtStudentPProgram" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txtStudentPMajor2"
        android:layout_alignTop="@+id/textView21"
        android:layout_alignLeft="@+id/txtStudentPMajor1"
        android:layout_alignStart="@+id/txtStudentPMajor1"
        android:layout_alignRight="@+id/txtStudentPMajor1"
        android:layout_alignEnd="@+id/txtStudentPMajor1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnStudentPBack"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtStudentPMajor2"
        android:layout_alignStart="@+id/txtStudentPMajor2"
        android:layout_marginBottom="36dp" />

</RelativeLayout>
