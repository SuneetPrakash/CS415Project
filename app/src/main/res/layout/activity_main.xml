<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#CBEEF2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#74EDED" >


        <TextView android:text="USP Library System" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="@dimen/HeaderSize"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnLogin"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/spinner"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:text="Username :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textSize="@dimen/TextSize"
            android:layout_alignTop="@+id/editTextUsername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Password :"
            android:layout_width="wrap_content"
            android:id="@+id/textViewPassword"
            android:layout_height="32dp"

            android:textSize="@dimen/TextSize"
            android:layout_above="@+id/textView4"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginBottom="40dp" />

        <EditText
            android:layout_width="200dp"
            android:inputType="textPassword"
            android:layout_height="32dp"
            android:ems="10"
            android:id="@+id/editTextPassword"
            android:background="@android:color/holo_green_light"
            android:layout_alignBaseline="@+id/textViewPassword"
            android:layout_alignBottom="@+id/textViewPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText

            android:id="@+id/editTextUsername"
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:ems="10"
            android:background="@android:color/holo_green_light"
            android:layout_above="@+id/textViewPassword"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="36dp"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:entries="@array/role_array"
            android:prompt="@string/select_role"
            android:background="@android:color/holo_green_light"
            android:layout_alignTop="@+id/textView4"
            android:spinnerMode="dropdown"
            android:layout_alignRight="@+id/btnCheckOutBook"
            android:layout_alignEnd="@+id/btnCheckOutBook"
            android:layout_alignLeft="@+id/editTextPassword"
            android:layout_alignStart="@+id/editTextPassword" />
        android:spinnerMode="dropdown" />

        <TextView
            android:text="Role :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="@dimen/TextSize"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textViewPassword"
            android:layout_alignStart="@+id/textViewPassword" />
    </RelativeLayout>

</LinearLayout>
